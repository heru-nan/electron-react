{
  "name": "electron-react",
  "version": "0.1.0",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "start-electron": "nodemon --watch ./public/* --exec \"electron .\"",
    "dev": "set PORT=%PORT% && concurrently \"yarn start-react\" \"wait-on http://localhost:%PORT% && yarn start-electron\"",
    "postinstall": "electron-builder install-app-deps",
    "pack-app": "yarn build-react && electron-builder --dir",
    "build": "yarn build-react && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "cd server && npx nodemon server.js ",
    "set-port": "$env:PORT 4000"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "wait-on": "^7.0.1"
  }
}
